@model Vidly.ViewModels.FormCustomerViewModel
@{
    /**/

    ViewBag.Title = "NewCustomer";
}

<h2>NewCustomer</h2>

@using (Html.BeginForm("CreateCustomer", "Movies"))
{
    <div class="form-group">
        <label>Name </label>
        @Html.TextBoxFor(c => c.Customer.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.name)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.membershipTypeId)
        @Html.DropDownListFor(c => c.Customer.membershipTypeId, new SelectList(Model.MembershipTypes, "Id", "membershipName"), "Select MemberShipType", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.membershipTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.birthDate)
        @Html.TextBoxFor(c => c.Customer.birthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.birthDate)
    </div>

    <div class="form-group">
        <label>
            @Html.CheckBoxFor(c => c.Customer.isSubscribedToNewsLetter) Is Subscribed to News Letter
        </label>
    </div>

    @Html.HiddenFor(c => c.Customer.id)
    @Html.AntiForgeryToken();

    <button class="btn btn-default" name="create" type="submit" value="save">Save!</button>
    <button class="btn btn-primary" name="create" type="submit" value="edit">Edit!</button>
    <button class="btn btn-danger" name="create" type="submit" value="erase">Erase!</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


